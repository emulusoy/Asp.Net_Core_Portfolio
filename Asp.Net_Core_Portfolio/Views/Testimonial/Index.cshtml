@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">My References</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Name Surname </th>
                            <th> Company </th>
                            <th> Title </th>
                            <th> Details </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.TestimonialImageUrl" alt="image" /></td>
                                <td>@item.TestimonialName</td>
                                <td>@item.TestimonialCompany</td>
                                <td>@item.TestimonialComment</td>
                                <td>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Delete</a>
                                
                                    <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-success">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info">Add Reference</a>
            </div>
        </div>
    </div>
</div>