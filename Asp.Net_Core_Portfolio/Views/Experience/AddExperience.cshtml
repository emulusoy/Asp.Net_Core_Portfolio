@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Add Experience Page</h3>
</div>
<br />
<br />
<br />

@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{

    @Html.HiddenFor(x=>x.ExperienceID)
    @Html.Label("Experience Name")
    @Html.TextBoxFor(x=>x.ExperienceName,new {@class="form-control"})
    <br>
    @Html.Label("Experience Date")
    @Html.TextBoxFor(x => x.ExperienceDate, new { @class = "form-control" })
    <br />
    @Html.Label("Image Url")
    @Html.TextBoxFor(x => x.ExperienceImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.ExperienceImageDescription,10,3, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-dark">Add</button>
}