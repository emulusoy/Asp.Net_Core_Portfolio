@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Social Media Accounts</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>URL</th>
                            <th>Icon</th>
                            <th>Status</th>
                            <th>DelEditete</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.SocialMediaName</td>
                                <td>@item.SocialMediaUrl</td>
                                <td>@item.SocialMediaIcon</td>
                                <td>@item.SocialMediaStatus</td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Delete</a>
                                <a href="/SocialMedia/EditSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/SocialMedia/AddSocialMedia/" class="btn btn-outline-info">Add Social Media Account</a>
            </div>
        </div>
    </div>
</div>