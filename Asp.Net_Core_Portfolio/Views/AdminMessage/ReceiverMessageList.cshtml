@using EntityLayer.Concrete
@model List<WriterMessage>


@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Writer-Admin InBox</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sender</th>
                            @*<th>Mail</th>*@
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>See Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.SenderName</td>
                                @*<td>@item.Mail</td>*@
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-success">See Message</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a asp-controller="AdminMessage" asp-action="AdminMessageSend" class="btn btn-outline-info">New Message</a>
            </div>
        </div>
    </div>
</div>
