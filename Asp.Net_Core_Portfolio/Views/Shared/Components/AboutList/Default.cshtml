@using EntityLayer.Concrete
@model List<About>
<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-6"> 
                <h2 class="h4 my-2">@item.AboutTitle</h2>
                <p>@item.AboutDescription</p>
                <div class="row mt-3">
                    <div class="col-sm-2">
                        <div class="pb-1">Email:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.AboutMail</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Phone:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.AboutPhone</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Address:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.AboutAddress</div>
                    </div>                 
                </div>              
            </div>
            <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@item.AboutImageUrl" width="400" height="400" alt="Walter Patterson" /></div>
            }
        </div>
    </div>
</div>