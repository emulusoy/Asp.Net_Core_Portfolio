@using EntityLayer.Concrete
@model List<Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> ##### </th>
                                <th> Image </th>
                                <th> Project Name </th>
                                <th> Fee </th>
                                <th> Ratio </th>
                                <th> Payment Status </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                               
                            <tr>
                                <td>
                                    @item.PortfolioID
                                </td>
                                <td>
                                        <img src="@item.PortfolioImageUrl" />
                                </td>
                                <td>
                                    <img src="@item.PortfolioImageUrl2" alt="image" />
                                    <span class="pl-2">@item.PortfolioName</span>
                                </td>
                                <td> @item.PortfolioFee</td>
                                <td> @item.PortfolioValue%</td>
                                <td>
                                   <a href="/Portfolio/EditPortfolio/@item.PortfolioID/"></a> <div class="badge badge-outline-success">Details ..</div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>