@using EntityLayer.Concrete
    @model List<WriterMessage>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Latest Messages</h6>
    @foreach (var item in Model)
    {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item"href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID">
                <div class="preview-thumbnail">
                    <img src="~/Admin/Template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
                </div>
                <div class="preview-item-content">
                    <p class="preview-subject ellipsis mb-1"><b>@item.SenderName</b>send you a message</p>
                    <p class="text-muted mb-0"> @item.Date.ToString("dd MM yyyy")</p>
                </div>
            </a>
    }
    <div class="dropdown-divider"></div>
    <p class="p-3 mb-0 text-center">3 new messages</p>
</div>