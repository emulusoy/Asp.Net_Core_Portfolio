@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Edit Skills Page</h3>
</div>
<br />
<br />
<br />

@using (Html.BeginForm("EditSkill","Skill",FormMethod.Post)){

    @Html.HiddenFor(x=>x.SkillID)
    @Html.Label("Skill Title")
    @Html.TextBoxFor(x=>x.SkillTitle,new {@class="form-control"})
    <br>
    @Html.Label("Skill Value")
    @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-dark">Edit</button>
}