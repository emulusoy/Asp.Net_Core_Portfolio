@model Asp.Net_Core_Portfolio.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/Template/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/Template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/Template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/Template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/Template/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/Template/images/logo.svg" alt="logo">
                            </div>
                            <h4>Register here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>

                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name?"/>
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control" placeholder="Surname?" />
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Image Url?" />
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="User Name?" />
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password?" />
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Password again?" />
                                </div>
                                <div class="mt-3">
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" asp-for="Mail" class="form-control" placeholder="Mail?" />
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                     
                                 <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="/Writer/Login/Index" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>
    <script src="~/skydash/Template/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/skydash/Template/js/off-canvas.js"></script>
    <script src="~/skydash/Template/js/hoverable-collapse.js"></script>
    <script src="~/skydash/Template/js/template.js"></script>
    <script src="~/skydash/Template/js/settings.js"></script>
    <script src="~/skydash/Template/js/todolist.js"></script>
</body>

</html>

