@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h1>Sender Message Details</h1>
<br />
<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
    @Html.Label("Sender Name")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Sender Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Message Content")
    @Html.TextBoxFor(x => x.WriterMessageContent, new { @class = "form-control", @readonly = "readonly" })
</form>